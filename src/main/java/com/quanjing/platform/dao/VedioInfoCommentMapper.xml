<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.quanjing.platform.dao.VedioInfoCommentDao">

	
    <resultMap id="VedioInfoComment" type="com.quanjing.model.platform.VedioInfoComment">
        <result property="id" column="id"/>
        <result property="vedioInfoId" column="vedio_info_id"/>
        <result property="vedioId" column="vedio_id"/>
        <result property="content" column="content"/>
        <result property="createTime" column="create_time"/>
        <result property="createUser" column="create_user"/>
    </resultMap>
    
     <resultMap id="VedioInfoCommentVo"  type="com.quanjing.model.platform.vo.VedioInfoCommentVo" extends="VedioInfoComment"></resultMap>
	
	<!-- 用于select查询公用抽取的列 -->
	<sql id="columns">
	    <![CDATA[
        	id ,
        	vedio_info_id ,
        	vedio_id ,
        	content ,
        	create_time ,
        	create_user 
	    ]]>
	</sql>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert"  useGeneratedKeys="true" keyProperty="id" >
    <![CDATA[
        INSERT INTO vedio_info_comment (
        	id ,
        	vedio_info_id ,
        	vedio_id ,
        	content ,
        	create_time ,
        	create_user 
        ) VALUES (
        	#{id} ,
        	#{vedioInfoId} ,
        	#{vedioId} ,
        	#{content} ,
        	#{createTime} ,
        	#{createUser} 
        )
    ]]>
		<!--	
			oracle: order="BEFORE" SELECT sequenceName.nextval AS ID FROM DUAL 
			DB2: order="BEFORE"" values nextval for sequenceName
		<selectKey resultType="java.lang.Long" order="BEFORE" keyProperty="userId">
			SELECT sequenceName.nextval AS ID FROM DUAL 
        </selectKey>
		-->
	</insert>
    
	<update id="update">
        UPDATE vedio_info_comment
        <trim prefix="SET" suffixOverrides=",">  
	        <if test="@Ognl@isNotEmpty(vedioInfoId)">
	        vedio_info_id = #{vedioInfoId,jdbcType=BIGINT} ,
	        </if>
	        <if test="@Ognl@isNotEmpty(vedioId)">
	        vedio_id = #{vedioId,jdbcType=BIGINT} ,
	        </if>
	        <if test="@Ognl@isNotEmpty(content)">
	        content = #{content,jdbcType=VARCHAR} ,
	        </if>
	        <if test="@Ognl@isNotEmpty(createTime)">
	        create_time = #{createTime,jdbcType=TIMESTAMP} ,
	        </if>
	        <if test="@Ognl@isNotEmpty(createUser)">
	        create_user = #{createUser,jdbcType=BIGINT} 
	        </if>
 	     </trim>
        WHERE 
	        id = #{id} 
	</update>

    <delete id="delete">
    <![CDATA[
        DELETE FROM vedio_info_comment 
        WHERE
	        id = #{id} 
    ]]>
    </delete>
    
    <select id="getById" resultMap="VedioInfoComment">
		SELECT <include refid="columns" />
	    <![CDATA[
		    FROM vedio_info_comment 
	        WHERE 
		        id = #{id} 
	    ]]>
	</select>
	
		
    <select id="findCount" resultType="long">
        SELECT count(*) FROM vedio_info_comment 
		<include refid="findWhere"/>    
    </select>
    
    <!--
    	分页查询已经使用Dialect进行分页,也可以不使用Dialect直接编写分页
    	因为分页查询将传 offset,pageSize,lastRows 三个参数,不同的数据库可以根于此三个参数属性应用不同的分页实现
    -->
    <select id="findPage" resultMap="VedioInfoCommentVo">
    	SELECT <include refid="columns" />
	    FROM vedio_info_comment 
		<include refid="findWhere"/>
		
		<if test="@Ognl@isNotEmpty(sortColumns)">
			ORDER BY ${sortColumns}
		</if>
    </select>

	
	<sql id="findWhere">
		<!-- ognl访问静态方法的表达式 为@class@method(args),以下为调用rapid中的Ognl.isNotEmpty()方法,还有其它方法如isNotBlank()可以使用，具体请查看Ognl类 -->
		<where>	      				
	       <if test="@Ognl@isNotEmpty(id)">
				AND id = #{id}
			</if>
	       <if test="@Ognl@isNotEmpty(vedioInfoId)">
				AND vedio_info_id = #{vedioInfoId}
			</if>
	       <if test="@Ognl@isNotEmpty(vedioId)">
				AND vedio_id = #{vedioId}
			</if>
	       <if test="@Ognl@isNotEmpty(content)">
				AND content = #{content}
			</if>
	       <if test="@Ognl@isNotEmpty(createUser)">
				AND create_user = #{createUser}
			</if>
		</where>
	</sql>
	
</mapper>

